durak:
class card        (unit)
class player
class place        (hex)
action: fight    (attack)
action: move    (move)

objects; actions; visibility;
preconditions; targets;

unit card { suit; value; }
place card_slot { card; }
place pack {card[]; }
player { pack; }
map {pack; kozyr card_slot; desk card_slot[2][6]; alias desk[1] bottom; alias desk[2] top;}

defrule move(card, hex, player):
        not hex on desk => false
        continue
defrule move(card, hex, player):
        player = players.last => continue
        hex on top => false
        desk.count = players.last.pack.count => false
        desk.empty => true
        card.value in ( select card.value from desk ) => true
        false
defrule move(card, hex, player):
        not player = players.last => continue
        hex on bottom => false
        card.value > hex.down.card.value and card.suit = hex.down.card.suit => true
        card.suit = kozyr_suit and not hex.down.card.suit = kozyr_suit => true
        false
