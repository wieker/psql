defhook end(round):
        if (round.dirty = 1 and bottom.count < 6 and players.last.pack.count > 0) continue;
        set c = (select card from bottom where card.hex.top.card = null);
        if (c.count > 0) { move(desk, player.pack); players.rotate(1); } else { move(desk, trash); players.rotate(2); }

